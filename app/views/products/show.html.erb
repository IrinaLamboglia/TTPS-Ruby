<div class="container my-4">
  <div class="row">
    <div class="col-md-6">
      <% if @product.images.attached? %>
        <%= image_tag @product.images.first.variant(resize_to_fill: [500, 500]), class: "img-fluid rounded" %>
      <% else %>
        <%= image_tag "placeholder.png", class: "img-fluid rounded" %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h1><%= @product.name %></h1>
      <p class="text-muted"><%= @product.description %></p>
      <p><strong>Precio:</strong> $<%= @product.price %></p>
      <p><strong>Stock Disponible:</strong> <%= @product.stock %></p>
      <%= link_to "Volver al CatÃ¡logo", products_path, class: "btn btn-outline-dark mt-3" %>
    </div>
  </div>
</div>
