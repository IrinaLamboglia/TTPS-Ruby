<h1 class="text-center my-4">Cat√°logo de Productos</h1>

<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if product.images.attached? %>
            <%= image_tag product.images.first.variant(resize_to_fill: [300, 300]), class: "card-img-top" %>
          <% else %>
            <%= image_tag "placeholder.png", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text text-muted"><%= truncate(product.description, length: 100) %></p>
            <p class="card-text"><strong>Precio:</strong> $<%= product.price %></p>
            <p class="card-text"><strong>Stock:</strong> <%= product.stock %></p>
          </div>
          <div class="card-footer text-center">
            <%= link_to "Ver Detalles", product_path(product), class: "btn btn-dark btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
