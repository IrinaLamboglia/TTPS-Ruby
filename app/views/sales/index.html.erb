<div class="container my-5">
  <h1 class="text-center mb-4">Historial de Ventas</h1>
  <div class="card shadow">
    <div class="card-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Productos</th>
            <th>Empleado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @sales.each_with_index do |sale, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= sale.created_at.strftime("%d/%m/%Y %H:%M") %></td>
              <td>$<%= sale.total %></td>
              <td>
                <% sale.sale_items.each do |item| %>
                  <p><%= item.product.name %> (x<%= item.quantity %>)</p>
                <% end %>
              </td>
              <td><%= sale.user.name %></td>
              <td>
                <%= link_to "Ver", sale_path(sale), class: "btn btn-dark btn-sm" %>
                <%= link_to "Editar", edit_sale_path(sale), class: "btn btn-warning btn-sm" %>
                <%= link_to "Eliminar", sale_path(sale), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "¿Estás seguro de eliminar esta venta?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Registrar Nueva Venta", new_sale_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
