<%= content_for :title, "Editar Usuario" %>

<section class="container mt-5">
  <h1 class="text-secondary fw-bold mb-4">Editar Usuario</h1>

  <%= form_with model: @user, local: true do |f| %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <%= f.label :email, 'Email', class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Ingrese el email' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :alias, 'Alias', class: 'form-label' %>
        <%= f.text_field :alias, class: 'form-control', placeholder: 'Ingrese el alias' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.label :role_id, 'Rol', class: 'form-label' %>
        <%= f.collection_select :role_id, @roles, :id, :name, { include_blank: 'Seleccione un rol' }, class: 'form-select' %>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.check_box :active %>
        <%= f.label :active, 'Usuario Activo', class: 'form-label' %>
      </div>
    </div>

    <%= f.submit 'Guardar Cambios', class: 'btn btn-success' %>
    <%= link_to 'Cancelar', users_path, class: 'btn btn-outline-secondary' %>
  <% end %>
</section>
