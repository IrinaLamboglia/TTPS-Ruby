<div class="container">
  <h1>Todos los productos</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <%= link_to admin_product_path(product) do %>
          <% if product.images.attached? %>
            <%= image_tag product.images.first.variant(resize_to_limit: [300, 300]), class: "img-fluid" %>
          <% end %>
          <h4><%= product.name %></h4>
          <p>$<%= product.price %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>