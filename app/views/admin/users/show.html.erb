<%= content_for :title, "Detalle del Usuario" %>

<section class="container mt-5">
  <h1 class="text-secondary fw-bold mb-4">Detalle del Usuario</h1>

  <div class="card">
    <div class="card-header bg-primary text-white">
      Información del Usuario
    </div>
    <div class="card-body">
      <!-- Mostrar el alias, email, teléfono y rol del usuario -->
      <h5 class="card-title">
        <%= @user.username %> <!-- Mostramos el nombre de usuario (username) -->
      </h5>
      <p class="card-text">
        <strong>Email:</strong> <%= @user.email %><br>
        <strong>Teléfono:</strong> <%= @user.phone %><br>
        <strong>Rol:</strong> <%= @user.role.name %><br>

        <!-- Estado del usuario (activo o bloqueado) -->
        <strong>Estado:</strong> 
        <span class="badge <%= @user.active ? 'bg-success' : 'bg-danger' %>">
          <%= @user.active ? 'Activo' : 'Bloqueado' %>
        </span><br>

        <!-- Mostrar la fecha de creación y última actualización -->
        <strong>Fecha de Creación:</strong> <%= @user.created_at.strftime('%Y-%m-%d') %><br>
        <strong>Última Actualización:</strong> <%= @user.updated_at.strftime('%Y-%m-%d') %>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <!-- Botones de acción -->
      <%= link_to edit_admin_user_path(@user), class: 'btn btn-outline-warning btn-sm' do %>
        <i class="fas fa-edit"></i> Editar
      <% end %>

      <%= link_to 'Volver', admin_users_path, class: 'btn btn-outline-secondary  btn-sm' %>
    </div>
  </div>
</section>

