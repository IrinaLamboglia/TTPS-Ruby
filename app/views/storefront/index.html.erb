<h1 class="text-center my-4">Catálogo de Productos</h1>

<div class="container">
  <div class="row mb-4">
    <div class="col-md-6">
      <%= form_with url: storefront_index_path, method: :get, local: true do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar productos..." %>
          <button class="btn btn-dark" type="submit">Buscar</button>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 text-end">
      <%= form_with url: storefront_index_path, method: :get, local: true do %>
        <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), include_blank: "Todas las categorías", class: "form-select" %>
        <button class="btn btn-dark" type="submit">Filtrar</button>
      <% end %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <% if product.images.attached? %>
            <%= image_tag product.images.first.variant(resize_to_fill: [300, 300]), class: "card-img-top" %>
          <% else %>
            <%= image_tag "placeholder.png", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text text-muted"><%= truncate(product.description, length: 100) %></p>
            <p class="card-text"><strong>Precio:</strong> $<%= product.price %></p>
            <p class="card-text"><strong>Stock:</strong> <%= product.stock %></p>
          </div>
          <div class="card-footer text-center">
            <%= link_to "Ver Detalles", product_path(product), class: "btn btn-dark btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>